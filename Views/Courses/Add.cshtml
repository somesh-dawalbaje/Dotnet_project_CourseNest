@model CourseNest.Models.AddCourseViewModel

<h1>Add Course</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Duriation In Months</label>
        <input type="number" class="form-control" asp-for="DurationMonths" />
    </div>

    <div class="mt-3">
        <label class="form-label">Fees</label>
        <input type="text" class="form-control" asp-for="Fees" />
    </div>

    <div class="mt-3">

        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>

    </div>

</form>